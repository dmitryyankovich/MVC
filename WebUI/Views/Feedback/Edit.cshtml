@model WebUI.ViewModels.FeedbackViewModel

@{
    Layout = null;
}
<div id="editFeedback">
    @using (Ajax.BeginForm("Edit", "Feedback", new AjaxOptions { UpdateTargetId = "editFeedback" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal editForm">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.UserToId)
            @Html.HiddenFor(model => model.UserId)
            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(model => model.FeedbackMessage)
                    @Html.TextAreaFor(model => model.FeedbackMessage)
                    @Html.ValidationMessageFor(model => model.FeedbackMessage)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10 rating">
                    @{
        List<SelectListItem> listItems = new List<SelectListItem>();
        listItems.Add(new SelectListItem
             {
                 Text = "1(very bad)",
                 Value = "1"
             });
        listItems.Add(new SelectListItem
             {
                 Text = "2(worse than an average)",
                 Value = "2",
             });
        listItems.Add(new SelectListItem
             {
                 Text = "3(average)",
                 Value = "3"
             });
        listItems.Add(new SelectListItem
        {
            Text = "4(almost ideally)",
            Value = "4"
        });
        listItems.Add(new SelectListItem
        {
            Text = "5(ideally)",
            Value = "5"
        });
                    }
                    @Html.LabelFor(model => model.Rating)
                    @Html.DropDownListFor(model => model.Rating, listItems, "-- Choose rating --")
                    @Html.ValidationMessageFor(model => model.Rating)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10 create_feedback">
                    <input type="submit" value="Save changes" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>

