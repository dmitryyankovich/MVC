@model WebUI.ViewModels.MessageViewModel
@{
    Layout = null;
}
<div id="message">
    @using (Ajax.BeginForm("Create", "Message", new AjaxOptions { UpdateTargetId = "message" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.UserNameTo)
            @Html.HiddenFor(model => model.UserId)
            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(model => model.MessageText)
                    @Html.TextAreaFor(model => model.MessageText)
                    @Html.ValidationMessageFor(model => model.MessageText)
                </div>
                <div class="col-md-10 rating">
                    @Html.LabelFor(model => model.Title)
                    @Html.TextBoxFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10 create_feedback">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>
