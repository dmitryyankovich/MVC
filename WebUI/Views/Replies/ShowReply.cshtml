@using Microsoft.AspNet.Identity
@model WebUI.ViewModels.RepliesViewModel

@if (Model != null)
{
    <div id="message">
        <div id="message1">
            @if ((Int32.Parse(User.Identity.GetUserId()) == Model.UserId || Int32.Parse(User.Identity.GetUserId()) == Model.UserId))
            {
                @Ajax.ActionLink("Edit Reply", "Edit", "Replies", new { id = Model.TicketId }, new AjaxOptions { UpdateTargetId = "replyHere" })
                @Ajax.ActionLink("Delete Reply", "Delete", "Replies", new { id = Model.TicketId }, new AjaxOptions { UpdateTargetId = "replyHere" })
            }
        </div>
        <h4><a href="@Url.Action("ViewProfile", "Account", new { id = Model.UserId })">@Model.UserName said</a></h4>
        <h6>@Model.Time</h6>
        @Html.TextAreaFor(model => model.Message, new { @readonly = "readonly" })
    </div>
}
